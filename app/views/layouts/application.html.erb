<!DOCTYPE html>
<html>
<head>
  <title>Leviathan - Political Dictionary</title>
	  <%= stylesheet_link_tag "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
</head>

<body>
	<div class="page">
		<div class="mynav">
			<div class="container">
				<div class="row">
					<div class="col-md-7">
						<div class="alignleft">
							<a href="/defenitions" style="padding-left:0; color:#2a3747;  font-size:16px; float:left;margin-top:7px; font-weight: bold;">Political Dictionary</a>	
						</div>
						<div class="insearch" style="margin-top:-5px;">
                			<%= form_tag steppies_searchresult_path, :method => 'get', :class => "form-inline" do %>
                    			<div class="form-group">
                       				<%= text_field_tag :search, params[:search], :class => "form-control", :style => "width:220px;" %>
                    			</div>
                    			<div class="form-group">
                        			<%= submit_tag "Search", :name => nil, :class => "btn btn-default sbtn acolor"  %>
                    			</div>
                			<% end %>
       					</div>
					</div>
					<!-- right nav-->
					<div class="col-md-5">
						<div class="alignleft" style="text-align:right;">
							<%= link_to 'Request a Defenition', steppies_ask_path, :class => '' %>
							<%= link_to 'Create a Defenition', new_steppy_path, :class => '' %>
							<!-- current user toggle -->
							<% if current_user %>
								<b><%= link_to current_user.username, current_user %></b>
								<b><%= link_to "Log Out", logout_path %></b>
							<% else %>
								<b><a href="#" id="login">Log In</a></b>
								<b><%= link_to "Sign Up", new_user_path %></b>
								<div class=" login">
									<%= form_tag sessions_path do %>
										<%= text_field_tag :username, nil, placeholder:"Username", :class => "form-control fw"  %>
										<%= password_field_tag :password, nil, placeholder:"Password",  :class => "form-control fw"  %>
										<%= submit_tag "Log in", :class => "btn btn-warning" %>
									<% end %>
								</div>
								
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="alpha">
					<div class="border">
						<%= link_to '#', steppies_charlist_path(:char => /[0-9]+(\%7C[0-9]+)*/) %>
						<%= link_to 'A', steppies_charlist_path(:char => "A") %>
						<%= link_to 'B', steppies_charlist_path(:char => "B") %>
						<%= link_to 'C', steppies_charlist_path(:char => "C") %>
						<%= link_to 'D', steppies_charlist_path(:char => "D") %>
						<%= link_to 'E', steppies_charlist_path(:char => "E") %>
						<%= link_to 'F', steppies_charlist_path(:char => "F") %>
						<%= link_to 'G', steppies_charlist_path(:char => "G") %>
						<%= link_to 'H', steppies_charlist_path(:char => "H") %>
						<%= link_to 'I', steppies_charlist_path(:char => "I") %>
						<%= link_to 'J', steppies_charlist_path(:char => "J") %>
						<%= link_to 'K', steppies_charlist_path(:char => "K") %>
						<%= link_to 'L', steppies_charlist_path(:char => "L") %>
						<%= link_to 'M', steppies_charlist_path(:char => "M") %>
						<%= link_to 'N', steppies_charlist_path(:char => "N") %>
						<%= link_to 'O', steppies_charlist_path(:char => "O") %>
						<%= link_to 'P', steppies_charlist_path(:char => "P") %>
						<%= link_to 'Q', steppies_charlist_path(:char => "Q") %>
						<%= link_to 'R', steppies_charlist_path(:char => "R") %>
						<%= link_to 'S', steppies_charlist_path(:char => "S") %>
						<%= link_to 'T', steppies_charlist_path(:char => "T") %>
						<%= link_to 'U', steppies_charlist_path(:char => "U") %>
						<%= link_to 'V', steppies_charlist_path(:char => "V") %>
						<%= link_to 'W', steppies_charlist_path(:char => "W") %>
						<%= link_to 'X', steppies_charlist_path(:char => "X") %>
						<%= link_to 'Y', steppies_charlist_path(:char => "Y") %>
						<%= link_to 'Z', steppies_charlist_path(:char => "Z") %>
						
					</div>
			</div>
			<div class="logo">
				<img src="/assets/logoeyes.jpg" alt="Leviathan = Political Dictionary" style="width:900px;">
			</div>
		</div>

		<div class="appcont ">
			<div class="container">
			<%= yield %>
			</div>
		</div>

		</br>
		<div class="footer2">
			<p style="text-align:center; color:#bbb; font-size:12px; text-shadow: 0 1px 1px rgba(0,0,0,.2); padding-top: 30px;">About Help Blog Status Jobs Ads Terms Privacy Advertisers Businesses Media Developers Resources Directory Â© 2013 Steppy</p>
		</div>
	</div>
</body>

<script>
      $(document).ready(function() {

      $("#login").click(function(){
         $(".login").slideToggle( [300], function(){ 
             $(".log").text('Slide Down Transition Complete');
          });
      });
   });
</script>

</html>
